// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MERCHANT
  ADMIN
}

enum MessageFrom {
  CUSTOMER
  MERCHANT
  AI
}

// User and Authentication
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  emailVerified Boolean  @default(false)
  image         String?
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  merchant Merchant?
  sessions Session[]
  accounts Account[]
}

// Better Auth - Session
model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

// Better Auth - Account
model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(references: [id], fields: [userId], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

// Better Auth - Verification
model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
}

// Merchant Profile
model Merchant {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  slug        String  @unique
  description String?
  logoUrl     String?
  address     String?

  subscriptionTier SubscriptionTier @default(FREE)

  products     Product[]
  chatSessions ChatSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

enum SubscriptionTier {
  FREE
  BASIC
  PREMIUM
}

// Product
model Product {
  id         String   @id @default(cuid())
  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  name         String
  description  String?
  priceUSD     Float
  priceSYP     Float
  exchangeRate Float    @default(10000) // Merchant's custom exchange rate (1 USD = X SYP)
  imageUrls    String[]
  category     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([merchantId])
}

// Chat Session
model ChatSession {
  id         String   @id @default(cuid())
  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  customerId    String?
  customerName  String
  customerEmail String?
  customerToken String? @default(uuid()) // Secure token for customer session resumption

  status           String  @default("active") // active, closed
  aiEnabled        Boolean @default(true)
  merchantTookOver Boolean @default(false)

  messages ChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([merchantId])
  @@index([customerId])
}

// Chat Message
model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  senderId   String?
  senderType String // customer, merchant, ai
  content    String

  createdAt DateTime @default(now())

  @@index([sessionId])
}
